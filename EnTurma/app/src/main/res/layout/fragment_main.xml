


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".MainActivity$PlaceholderFragment"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                />

            <TextView android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="O EnTurma é uma aplicação desenvolvida por alunos de Graduação de Engenharia de Software da Universidade de Brasília com o propósito de fornecer informação acerca da evolução do ensino fundamental brasileiro. O EnTurma permite a análise da progressão das turmas de ensino fundamental ao longo do tempo a partir de dados do Censo Escolar. Esses dados são utilizados para o cálculo do Índice de Desenvolvimento da Educação Básica (IDEB)."
                android:gravity="center"
                android:textSize="19dp" />

        </LinearLayout>
    </TableLayout>
</ScrollView>